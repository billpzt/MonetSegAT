<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kabul"
    android:orientation="vertical"
    android:padding="4dp"
    tools:context=".login.ui.EnderecoFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_input_cep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        app:endIconMode="custom"
        app:endIconTint="@color/pumpkin"
        app:endIconDrawable="@drawable/ic_close">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_cep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/qualy"
            android:hint="CEP"
            android:textColor="@color/aqua"
            android:textColorHint="#00796B"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_consulta_cep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="Consultar"
        android:textSize="18sp"
        android:backgroundTint="@color/pumpkin"/>

    <TextView
        android:id="@+id/tv_logradouro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:text="logradouro: "
        android:textSize="24sp"
        android:background="@color/white"
        android:textColor="@color/aqua"
        android:textColorHint="@color/mildmint"/>


    <TextView
        android:id="@+id/tv_bairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:text="bairro: "
        android:textSize="24sp"
        android:background="@color/white"
        android:textColor="@color/aqua"
        android:textColorHint="@color/mildmint"/>


    <TextView
        android:id="@+id/tv_cidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:text="cidade: "
        android:textSize="24sp"
        android:background="@color/white"
        android:textColor="@color/aqua"
        android:textColorHint="@color/mildmint"/>

    <TextView
        android:id="@+id/tv_estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:text="estado: "
        android:textSize="24sp"
        android:background="@color/white"
        android:textColor="@color/aqua"
        android:textColorHint="@color/mildmint"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        app:endIconMode="custom"
        app:endIconTint="@color/pumpkin"
        app:endIconDrawable="@drawable/ic_close">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_numero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/qualy"
            android:hint="nÃºmero"
            android:textColor="@color/aqua"
            android:textColorHint="#00796B"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        app:endIconMode="custom"
        app:endIconTint="@color/pumpkin"
        app:endIconDrawable="@drawable/ic_close">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_complemento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/qualy"
            android:hint="complemento"
            android:textColor="@color/aqua"
            android:textColorHint="#00796B"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="Cadastrar"
        android:textSize="18sp"
        android:backgroundTint="@color/pumpkin"/>

</LinearLayout>